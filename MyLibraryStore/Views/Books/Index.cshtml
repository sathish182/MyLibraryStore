@model IEnumerable<Book>
<h1>List of available books </h1>

@if (Model.Count() == 0)
{
    <h3>No Books available</h3>
}
else
{
    <ul class="list-group">
        @Html.ActionLink("Add a Book", "Create", "Book", null, new { @class = "btn btn-primary" })
        @foreach (var book in Model)
        {
            <li class="list-group-item">
                @*@Html.ActionLink(book.BookName, "Details", "Books", new { id=book.Id})*@
                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">@book.BookName</a>
                @Html.ActionLink("Edit", "Edit", "Book", new { id = book.Id }, new { @class = "btn btn-border-primary" }) |
                @Html.ActionLink("Delete", "Details", "Book", new { id = book.Id }, new { @class = "btn btn-border-danger" })


            </li>
        }
    </ul>
}
